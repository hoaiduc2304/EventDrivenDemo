{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DBConfiguration": {
    "DefaultConnection": "Server=127.0.0.1; User Id=eventuser; Database=eventdemo; Port=5432; Password=xxxxx; SSL Mode=Prefer; Trust Server Certificate=true",
    "SQLProvider": "postgre",
    "MultiTenant": false,
    "DefaultTenant": "29ba9842-9bab-4b3f-b229-0a8dbf5968d4",
    "HangFire": false
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicName": "order-events",
    "ProducerConfig": {
      "Acks": "all",
      "EnableIdempotence": true,
      "MessageTimeoutMs": 300000,
      "RetryBackoffMs": 1000,
      "ReconnectBackoffMs": 1000
    },
    "ConsumerConfig": {
      "GroupId": "order-consumers",
      "AutoOffsetReset": "earliest",
      "EnableAutoCommit": false
    }
  },
  "PluginLoader": {
    "Assemblies": [
      "Demo.Orders.Infastructure",
      "Demo.Payment.Repositories",
      "Demo.Payment.Controllers",
      "Demo.Orders.Api"
    ]
  }
}
